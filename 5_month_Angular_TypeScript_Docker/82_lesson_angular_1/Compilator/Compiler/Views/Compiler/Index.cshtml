@{
    ViewData["Title"] = "C# Compiler";
}

<h2>@ViewData["Title"]</h2>

<form method="post" action="/Compiler/Compile">
    <div class="form-group">
        <label for="code">Enter C# Code:</label>
        <textarea class="form-control" id="code" name="code" rows="10">@ViewBag.Code</textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Compile & Execute</button>
</form>

@if (!string.IsNullOrEmpty(ViewBag.Result))
{
    <div class="alert alert-info mt-3">
        @Html.Raw(ViewBag.Result)
    </div>
}
